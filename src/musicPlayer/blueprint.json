{
  "version": "1.0",
  "appName": "VDS Music Player",
  "clusters": {
    "Player": {
      "description": "核心播放器",
      "stateGroups": {
        "playback": {
          "description": "描述播放器的宏观操作状态，这是一个主状态机，包含加载过程。",
          "initial": "stopped",
          "states": [
            "stopped",
            "playing",
            "paused",
            "loading"
          ]
        },
        "track": {
          "description": "描述当前音轨的持久化状态，包括是否加载成功或已知错误。",
          "initial": "noTrack",
          "states": [
            "noTrack",
            "trackLoaded",
            "trackError"
          ]
        }
      },
      "transitions": {
        "description": "定义了领域事件如何确定性地改变核心状态。",
        "on": {
          "TRACK_LOADING_STARTED": {
            "target": {
              "playback": "loading"
            }
          },
          "TRACK_LOAD_SUCCEEDED": {
            "target": {
              "playback": "paused",
              "track": "trackLoaded"
            }
          },
          "TRACK_LOAD_FAILED": {
            "target": {
              "playback": "stopped",
              "track": "trackError"
            }
          },
          "PLAYBACK_STARTED": {
            "target": {
              "playback": "playing"
            }
          },
          "PLAYBACK_PAUSED": {
            "target": {
              "playback": "paused"
            }
          },
          "PLAYBACK_STOPPED": {
            "target": {
              "playback": "stopped",
              "track": "noTrack"
            }
          }
        }
      }
    }
  }
}